<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/dialog_shuttle_ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_cancel" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/_97sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            app:srcCompat="@drawable/ic_shuttle_hand" />

        <com.exceedgulf.alainzoo.views.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/make_sure_that_you_have_purchase_shuttle_service_at_the_main_gate"
            android:textColor="@color/white"
            android:textSize="@dimen/_23ssp"
            app:fontFamily="@string/cross_town" />

        <com.exceedgulf.alainzoo.views.CustomEdittext
            android:id="@+id/dialog_shuttle_edtShuttleCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_edittext"
            android:gravity="center_horizontal"
            android:hint="@string/shuttle_code"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="5"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black_71"
            android:textSize="@dimen/_13ssp"
            app:fontFamily="@string/avenir_next_demi_bold" />

        <com.exceedgulf.alainzoo.views.CustomTextview
            android:id="@+id/dialog_shuttle_tvIhaveIt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:text="@string/i_have_it"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:fontFamily="@string/avenir_next_demi_bold" />


        <com.exceedgulf.alainzoo.views.CustomTextview
            android:id="@+id/dialog_shuttle_tvIDonthaveIt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:text="@string/i_don_t_have_it"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:fontFamily="@string/avenir_next_demi_bold" />

    </LinearLayout>
</ScrollView>