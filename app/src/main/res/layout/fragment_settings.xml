<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.exceedgulf.alainzoo.fragments.SettingsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">

                    <com.exceedgulf.alainzoo.views.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/location_notification"
                        android:textAlignment="viewStart"
                        android:textColor="@color/slate_grey_two"
                        android:textSize="@dimen/_15sdp"
                        app:fontFamily="@string/avenir_next_medium" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/fragSetting_swBeacon"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:theme="@style/SCBSwitch" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorSettingDivider"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">

                    <com.exceedgulf.alainzoo.views.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/notification"
                        android:textAlignment="viewStart"
                        android:textColor="@color/slate_grey_two"
                        android:textSize="@dimen/_15sdp"
                        app:fontFamily="@string/avenir_next_medium" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/fragSetting_swNotification"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:theme="@style/SCBSwitch" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone">

                    <com.exceedgulf.alainzoo.views.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/notification"
                        android:textAlignment="viewStart"
                        android:textColor="@color/slate_grey_two"
                        android:textSize="@dimen/_15sdp"
                        app:fontFamily="@string/avenir_next_medium" />

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_28sdp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorSettingDivider" />

                <LinearLayout
                    android:id="@+id/fragSetting_llLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp">

                    <com.exceedgulf.alainzoo.views.CustomTextview
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/LANGUAGE"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/slate_grey_two"
                        android:textSize="@dimen/_15sdp"
                        app:fontFamily="@string/avenir_next_medium" />

                    <com.exceedgulf.alainzoo.views.CustomTextview
                        android:id="@+id/fragSetting_tvLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textAllCaps="false"
                        android:textColor="@color/colorSettingHighlight"
                        android:textSize="@dimen/_15sdp"
                        app:fontFamily="@string/avenir_next_medium" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_blue_back" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorSettingDivider" />

            </LinearLayout>

        </ScrollView>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/application_name"
            android:scaleType="fitXY"
            android:tint="@color/colorSetting"
            app:srcCompat="@drawable/header_main_home" />
    </FrameLayout>
</layout>