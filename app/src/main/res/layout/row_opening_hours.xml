<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp">

        <com.exceedgulf.alainzoo.views.CustomTextview
            android:id="@+id/row_ophr_tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cool_blue"
            android:textSize="@dimen/_20ssp"
            app:fontFamily="@string/cross_town"
            tools:text="ZOO OPENING HOURS" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/row_ophr_ivplaceholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/gray_item"
                android:padding="@dimen/_8sdp"
                android:scaleType="centerInside"
                android:src="@drawable/logo_splash"
                android:tint="@color/colorplaceholder" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/row_ophr_ivmain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/row_ophr_lltime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</layout>