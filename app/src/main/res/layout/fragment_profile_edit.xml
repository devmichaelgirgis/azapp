<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_eggplant"
            android:orientation="vertical">

            <com.exceedgulf.alainzoo.views.RoundedImageView
                android:id="@+id/fr_proedit_ivuserprofilepic"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_10sdp"
                app:civ_border="true"
                app:civ_border_color="@color/light_eggplant"
                app:civ_border_width="@dimen/_2sdp"
                app:srcCompat="@drawable/ic_profile_placeholder" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/application_name"
            android:scaleType="fitXY"
            android:tint="@color/light_eggplant"
            app:srcCompat="@drawable/header_main_home" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_15sdp">

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:tag="@string/star"
                    android:text="@string/your_name"
                    android:textAllCaps="false"
                    android:textColor="@color/warm_grey_two"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@string/avenir_next_demi_bold" />

                <com.exceedgulf.alainzoo.views.CustomEdittext
                    android:id="@+id/fr_proedit_edtName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_edittext"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cool_grey_two"
                    android:textDirection="anyRtl"
                    app:fontFamily="@string/avenir_next_regular" />


                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:tag="@string/star"
                    android:text="@string/email_id"
                    android:textAllCaps="false"
                    android:textColor="@color/warm_grey_two"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@string/avenir_next_demi_bold" />

                <com.exceedgulf.alainzoo.views.CustomEdittext
                    android:id="@+id/fr_proedit_edtemail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cool_grey_two"
                    android:textDirection="anyRtl"
                    app:fontFamily="@string/avenir_next_regular" />

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:tag="@string/star"
                    android:text="@string/phone_number"
                    android:textAllCaps="false"
                    android:textColor="@color/warm_grey_two"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@string/avenir_next_demi_bold" />

                <com.exceedgulf.alainzoo.views.CustomEdittext
                    android:id="@+id/fr_proedit_edtphone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_edittext"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="@string/hint_mobile_no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cool_grey_two"
                    android:textDirection="anyRtl"
                    app:fontFamily="@string/avenir_next_regular" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/date_of_birth"
                            android:textAllCaps="false"
                            android:textColor="@color/warm_grey_two"
                            android:textSize="@dimen/_13sdp"
                            app:fontFamily="@string/avenir_next_demi_bold" />

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:id="@+id/fr_proedit_tvDOB"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_edittext"
                            android:gravity="center_vertical|start"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/cool_grey_two"
                            android:textSize="@dimen/_15ssp"
                            app:fontFamily="@string/avenir_next_regular" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:tag="@string/star"
                            android:text="@string/gender"
                            android:textAllCaps="false"
                            android:textColor="@color/warm_grey_two"
                            android:textSize="@dimen/_13sdp"
                            app:fontFamily="@string/avenir_next_demi_bold" />

                        <Spinner
                            android:id="@+id/fr_proedit_spnGender"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_edittext"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/cool_grey_two" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/nationality"
                            android:textAllCaps="false"
                            android:textColor="@color/warm_grey_two"
                            android:textSize="@dimen/_13sdp"
                            app:fontFamily="@string/avenir_next_demi_bold" />


                        <Spinner
                            android:id="@+id/fr_proedit_spnNationality"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_edittext"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/cool_grey_two" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/emirate"
                            android:textAllCaps="false"
                            android:textColor="@color/warm_grey_two"
                            android:textSize="@dimen/_13sdp"
                            app:fontFamily="@string/avenir_next_demi_bold" />

                        <Spinner
                            android:id="@+id/fr_proedit_spnEmirate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_edittext"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/cool_grey_two" />

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/colorchangepss" />


                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:id="@+id/fr_proedit_tvChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_noti_next"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="@string/change_password"
                    android:textAlignment="viewStart"
                    android:textDirection="anyRtl"
                    android:textSize="@dimen/_14ssp"
                    app:fontFamily="@string/avenir_next_demi_bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_item" />


                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:id="@+id/fr_proedit_tvSaveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_red_corner_edt"
                    android:gravity="center"
                    android:text="@string/save_changes"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    app:fontFamily="@string/avenir_next_demi_bold" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!--</FrameLayout>-->
</layout>