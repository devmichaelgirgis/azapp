<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.exceedgulf.alainzoo.fragments.AttractionsDetailFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/fr_attde_ivplaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_190sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@color/gray_item"
                        android:padding="@dimen/_40sdp"
                        android:scaleType="centerInside"
                        android:tint="@color/colorplaceholder"
                        app:srcCompat="@drawable/logo_splash" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/fr_attde_ivmain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_190sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:scaleType="centerCrop" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_190sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/fram_experinces" />

                </FrameLayout>

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:id="@+id/fr_attde_tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textSize="@dimen/_20ssp"
                    app:fontFamily="@string/cross_town"
                    tools:text="Meet lion" />

                <!--<com.exceedgulf.alainzoo.views.CustomTextview-->
                <!---->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginEnd="@dimen/_16sdp"-->
                <!--android:layout_marginStart="@dimen/_16sdp"-->
                <!--android:layout_marginTop="@dimen/_8sdp"-->
                <!--android:textColor="@color/slate_grey_two"-->
                <!--android:textSize="@dimen/_11ssp"-->
                <!--app:fontFamily="@string/avenir_next_regular"-->
                <!--card_view:layout_constraintEnd_toEndOf="parent"-->
                <!--card_view:layout_constraintStart_toStartOf="parent"-->
                <!--card_view:layout_constraintTop_toBottomOf="@+id/row_edu_tvname"-->
                <!--tools:text="Nilo and her four adorable lion cubs are out exploring at Werribee Open Range Zoo. The best time to see the cubs will be early in the morning from 9:30am-10.30am. As with all young ones, the cubs will need their rest so we ask for visitorsâ€™ patience as they move into the dens to rest and feed." />-->

                <WebView
                    android:id="@+id/fr_attde_wvdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:scrollbars="none"
                    tools:ignore="WebViewLayout" />

            </LinearLayout>
        </ScrollView>

        <com.exceedgulf.alainzoo.views.CustomTextview
            android:id="@+id/fr_attde_tvEmptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:minHeight="@dimen/_260sdp"
            android:text="@string/fetching_data"
            android:textAlignment="center"
            android:textDirection="anyRtl"
            android:textSize="@dimen/_20ssp"
            android:visibility="visible"
            app:fontFamily="@string/cross_town" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/application_name"
            android:scaleType="fitXY"
            android:tint="@color/colorSzdcl"
            app:srcCompat="@drawable/header_main_home" />

    </FrameLayout>
</layout>
