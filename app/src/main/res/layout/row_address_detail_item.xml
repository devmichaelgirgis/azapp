<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/frcontact_ivcontact"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside" />
            <!--app:srcCompat="@drawable/ic_user_feed"-->

            <com.exceedgulf.alainzoo.views.CustomTextview
                android:id="@+id/frcontact_tvcontactnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/frcontact_ivcontact"
                android:layout_toStartOf="@id/frcontact_ivcontactarrow"
                android:paddingEnd="@dimen/_100sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/brownish_grey_three"
                android:textDirection="anyRtl"
                android:textAlignment="viewStart"
                android:textSize="@dimen/_13ssp"
                app:fontFamily="@string/avenir_next_regular"
                tools:text="@string/contact_number" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/frcontact_ivcontactarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_contactus" />

        </RelativeLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/colorcontactusdivider" />-->

</layout>