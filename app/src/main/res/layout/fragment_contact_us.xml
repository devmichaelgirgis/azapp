<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_30sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingStart="@dimen/_16sdp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_79sdp"
                    android:layout_height="@dimen/_134sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_new" />

                <LinearLayout
                    android:id="@+id/llContactInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical" />

            </LinearLayout>
        </ScrollView>

        <com.exceedgulf.alainzoo.views.CustomTextview
            android:id="@+id/frcontact_tvEmptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/fetching_data"
            android:textAlignment="center"
            android:textDirection="anyRtl"
            android:textSize="@dimen/_20sdp"
            android:visibility="visible"
            app:fontFamily="@string/cross_town" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/application_name"
            android:scaleType="fitXY"
            android:tint="@color/very_light_brown"
            app:srcCompat="@drawable/header_main_home" />
    </FrameLayout>

</layout>