<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/row_exp_home_ivplaceholder"
            android:layout_width="@dimen/_201sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@color/gray_item"
            android:padding="@dimen/_20sdp"
            android:scaleType="centerInside"
            android:tint="@color/colorplaceholder"
            app:srcCompat="@drawable/logo_splash" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/row_exp_home_ivmain"
            android:layout_width="@dimen/_201sdp"
            android:layout_height="@dimen/_102sdp"
            android:scaleType="centerCrop" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/_201sdp"
            android:layout_height="@dimen/_102sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/frame_animal_subitem" />

        <com.exceedgulf.alainzoo.views.CustomTextview
            android:id="@+id/row_exp_home_tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:background="@color/black_71"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/_185sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="Parrot Show"
            android:textColor="@color/white"
            android:textDirection="anyRtl"
            android:textSize="@dimen/_14sdp"
            app:autoSizeMaxTextSize="@dimen/_14ssp"
            app:autoSizeMinTextSize="@dimen/_10ssp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="@string/avenir_next_medium" />
    </FrameLayout>


</layout>