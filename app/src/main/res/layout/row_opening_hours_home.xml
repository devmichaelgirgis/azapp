<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/row_opening_hours_iv"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_22sdp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_zoo_hours" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:orientation="vertical">

            <com.exceedgulf.alainzoo.views.CustomTextview
                android:id="@+id/row_opening_hours_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zoo_s_hours"
                android:textColor="@color/cool_blue"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@string/avenir_next_regular" />

            <com.exceedgulf.alainzoo.views.CustomTextview
                android:id="@+id/row_opening_hours_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 am to 6:00 pm"
                android:textColor="@color/slate_grey_two"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@string/avenir_next_demi_bold" />

        </LinearLayout>
    </LinearLayout>
</layout>