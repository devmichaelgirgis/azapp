<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/_16sdp"
    android:paddingStart="@dimen/_16sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/row_faq_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:rotation="90"
            app:srcCompat="@drawable/ic_faq_up_arrow" />

        <com.exceedgulf.alainzoo.views.CustomTextview
            android:id="@+id/row_faq_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/row_faq_iv"
            android:padding="@dimen/_10sdp"
            android:text="@string/facilities_services"
            android:textAlignment="textStart"
            android:textColor="@color/grape"
            android:textDirection="anyRtl"
            android:textSize="@dimen/_13ssp"
            app:fontFamily="@string/avenir_next_demi_bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_item" />
</LinearLayout>