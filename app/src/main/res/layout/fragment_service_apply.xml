<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.exceedgulf.alainzoo.fragments.VisiterServiceApplyFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_20sdp">


                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:text="@string/application_details"
                    android:textColor="@color/charcoal_grey"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    app:fontFamily="@string/avenir_next_bold" />

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:id="@+id/fr_srapp_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/slate_grey_two"
                    android:textSize="@dimen/_11ssp"
                    app:fontFamily="@string/avenir_next_regular"
                    tools:text="Apply for AL MAHA ROYAL by giving us the details below" />

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:tag="@string/star"
                    android:text="@string/name"
                    android:textAllCaps="false"
                    android:textColor="@color/cool_grey_two"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@string/avenir_next_regular" />

                <com.exceedgulf.alainzoo.views.CustomEdittext
                    android:id="@+id/fr_ser_enq_edtname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_edittext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black_71"
                    android:textDirection="anyRtl"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@string/avenir_next_regular" />

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:tag="@string/star"
                    android:text="@string/phone_number"
                    android:textAllCaps="false"
                    android:textColor="@color/cool_grey_two"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@string/avenir_next_regular" />

                <com.exceedgulf.alainzoo.views.CustomEdittext
                    android:id="@+id/fr_ser_enq_edtphonenumnber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:hint="@string/hint_mobile_no"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black_71"
                    android:textDirection="anyRtl"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@string/avenir_next_regular" />

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:tag="@string/star"
                    android:text="@string/email_id"
                    android:textAllCaps="false"
                    android:textColor="@color/cool_grey_two"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@string/avenir_next_regular" />

                <com.exceedgulf.alainzoo.views.CustomEdittext
                    android:id="@+id/fr_ser_enq_edtemail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_edittext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black_71"
                    android:textDirection="anyRtl"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@string/avenir_next_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:tag="@string/star"
                            android:text="@string/date_of_services"
                            android:textAllCaps="false"
                            android:textColor="@color/cool_grey_two"
                            android:textSize="@dimen/_13sdp"
                            app:fontFamily="@string/avenir_next_regular" />

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:id="@+id/fr_ser_enq_tvdate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_edittext"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black_71"
                            android:textDirection="anyRtl"
                            android:textSize="@dimen/_13ssp"
                            app:fontFamily="@string/avenir_next_regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:tag="@string/star"
                            android:text="@string/time_of_services"
                            android:textAllCaps="false"
                            android:textColor="@color/cool_grey_two"
                            android:textSize="@dimen/_13sdp"
                            app:fontFamily="@string/avenir_next_regular" />

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:id="@+id/fr_ser_enq_tvtime"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_edittext"
                            android:focusable="false"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black_71"
                            android:textDirection="anyRtl"
                            android:textSize="@dimen/_13ssp"
                            app:fontFamily="@string/avenir_next_regular" />
                    </LinearLayout>
                </LinearLayout>

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:tag="@string/star"
                    android:text="@string/comment"
                    android:textAllCaps="false"
                    android:textColor="@color/cool_grey_two"
                    android:textSize="@dimen/_13sdp"
                    app:fontFamily="@string/avenir_next_regular" />


                <com.exceedgulf.alainzoo.views.CustomEdittext
                    android:id="@+id/fr_ser_enq_edtcoment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minHeight="@dimen/_86sdp"
                    android:padding="@dimen/_5sdp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black_71"
                    android:textDirection="anyRtl"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@string/avenir_next_regular"
                    tools:ignore="RtlCompat" />


                <com.exceedgulf.alainzoo.views.CustomButton
                    android:id="@+id/fr_ser_enq_btninqueryforservices"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/ic_rectangle_yellow"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    app:fontFamily="@string/avenir_next_medium" />
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/application_name"
            android:scaleType="fitXY"
            android:tint="@color/brownish_orange"
            app:srcCompat="@drawable/header_main_home" />
    </FrameLayout>
</layout>