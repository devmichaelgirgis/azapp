<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/happening_now_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slide_back_color"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingStart="@dimen/_16sdp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:srcCompat="@drawable/happening_now_home_auto_mirrored" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/happening_now_home_auto_mirrored"
            android:gravity="center_vertical">

            <com.exceedgulf.alainzoo.views.CustomTextview
                android:id="@+id/tvCount"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:background="@drawable/circle_drawable"
                android:textColor="@color/white"
                android:gravity="center"
                android:textDirection="ltr"
                android:textSize="@dimen/_11ssp"
                android:visibility="visible"
                app:fontFamily="@string/avenir_next_demi_bold"
                tools:text="4" />

            <com.exceedgulf.alainzoo.views.CustomTextview
                android:id="@+id/tvHappeningNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:gravity="start|center"
                android:maxLines="2"
                android:text="@string/happening_now"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18ssp"
                android:visibility="visible"
                app:autoSizeMaxTextSize="@dimen/_18ssp"
                app:autoSizeMinTextSize="@dimen/_10ssp"
                app:autoSizeStepGranularity="@dimen/_1ssp"
                app:autoSizeTextType="uniform"
                android:textDirection="anyRtl"
                android:textAlignment="viewStart"
                app:fontFamily="@string/cross_town" />
            <!--tools:text="@string/enter_the_email_id_of_the_family"-->
        </LinearLayout>
    </FrameLayout>
</layout>