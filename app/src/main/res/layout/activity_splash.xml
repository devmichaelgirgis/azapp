<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white">


        <ImageView
            android:id="@+id/splash_activity_ivLogo"
            android:layout_width="@dimen/_63sdp"
            android:layout_height="@dimen/_105sdp"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_10sdp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_new" />

        <VideoView
            android:id="@+id/splash_activity_vvZoo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/splash_activity_ivBottom"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/splash_activity_ivLogo"
            android:background="@color/white"
            android:backgroundTint="@color/white" />

        <ImageView
            android:id="@+id/splash_activity_ivBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_105sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/splash_footer" />
    </RelativeLayout>

</layout>