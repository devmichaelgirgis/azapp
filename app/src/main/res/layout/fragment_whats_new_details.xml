<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.exceedgulf.alainzoo.fragments.HappeningNowDetailFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_20sdp"
                android:paddingTop="@dimen/_24sdp">

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:id="@+id/fr_wtsne_tvtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="CONSERVATION FESTIVAL"
                    android:textColor="@color/slate_grey_two"
                    android:textSize="@dimen/_22ssp"
                    app:fontFamily="@string/cross_town" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/fr_wtsne_det_ivplaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:background="@color/gray_item"
                        android:contentDescription="@string/application_name"
                        android:padding="@dimen/_40sdp"
                        android:scaleType="centerInside"
                        android:tint="@color/colorplaceholder"
                        app:srcCompat="@drawable/logo_splash" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/fr_wtsne_det_ivmain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:contentDescription="@string/application_name"
                        android:scaleType="centerCrop" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:contentDescription="@string/application_name"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/fram_whats_new_row" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llStarttime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:id="@+id/fr_wtsne_det_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/tomato"
                            android:textSize="@dimen/_13ssp"
                            app:fontFamily="@string/avenir_next_bold"
                            tools:text="18 Nov 2017" />

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="end"
                            android:text="@string/to"
                            android:textColor="@color/tomato"
                            android:textSize="@dimen/_13ssp"
                            app:fontFamily="@string/avenir_next_bold" />


                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:id="@+id/fr_wtsne_det_tvendDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/tomato"
                            android:textSize="@dimen/_13ssp"
                            app:fontFamily="@string/avenir_next_bold"
                            tools:text="18 Nov 2017" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:id="@+id/fr_wtsne_det_tvtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/dark_blue_grey"
                            android:textSize="@dimen/_13ssp"
                            app:fontFamily="@string/avenir_next_bold"
                            tools:text="5 PM" />

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="start"
                            android:text="@string/to"
                            android:textColor="@color/dark_blue_grey"
                            android:textSize="@dimen/_13ssp"
                            app:fontFamily="@string/avenir_next_bold" />

                        <com.exceedgulf.alainzoo.views.CustomTextview
                            android:id="@+id/fr_wtsne_det_tvendTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/dark_blue_grey"
                            android:textSize="@dimen/_13ssp"
                            app:fontFamily="@string/avenir_next_bold"
                            tools:text="5 PM" />

                    </LinearLayout>

                </LinearLayout>

                <!--<com.exceedgulf.alainzoo.views.CustomTextview-->
                <!--android:id="@+id/fr_wtsne_det_tvdetail"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginEnd="@dimen/_16sdp"-->
                <!--android:layout_marginStart="@dimen/_16sdp"-->
                <!--android:layout_marginTop="@dimen/_8sdp"-->
                <!--android:text="Let's go back to our mother nature, and explore the rich natural resources and reveal some mysteries! Exciting workshops and activities await you at our Conservation Festival"-->
                <!--android:textSize="@dimen/_11ssp"-->
                <!--app:fontFamily="@string/avenir_next_regular" />-->

                <WebView
                    android:id="@+id/fr_wtsne_det_wvdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:scrollbars="none"
                    tools:ignore="WebViewLayout" />

                <com.exceedgulf.alainzoo.views.CustomTextview
                    android:id="@+id/fr_wtsne_det_tvviewonmap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:background="@drawable/ic_view_on_map"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/_25sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:text="@string/view_on_the_map"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    app:fontFamily="@string/avenir_next_regular" />
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/application_name"
            android:scaleType="fitXY"
            android:tint="@color/slate_grey"
            app:srcCompat="@drawable/header_main_home" />

    </FrameLayout>
</layout>