<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/very_light_brown</item>
        <item name="android:colorEdgeEffect">@android:color/transparent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:listDivider">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="appThemeLang">
        <item name="colorAccent">@color/very_light_brown</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CoolBlueTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/cool_blue</item>
    </style>

    <style name="DirtBrownTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/dirt_brown</item>
    </style>

    <style name="lightGreyBlueTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/light_grey_blue</item>
    </style>

    <style name="DialogThemeBlue" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/cool_blue</item>
    </style>

    <style name="DialogThemeYellowOrange" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/yellow_orange</item>
    </style>

    <style name="DialogThemeDarkViolent" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/light_eggplant</item>
    </style>

    <style name="DialogThemeBrownishOrange" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/brownish_orange</item>
    </style>

    <style name="snotTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/snot</item>
    </style>

    <style name="yellowOrangeTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/yellow_orange</item>
    </style>

    <style name="camoTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/camo</item>
    </style>

    <style name="tomatoTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/tomato</item>
    </style>

    <style name="reddishTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/reddish</item>
    </style>

    <style name="darkBlueGreyTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/dark_blue_grey</item>
    </style>

    <style name="veryLightBrownTheme" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/very_light_brown</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorAccent">@color/yellow_orange</item>
        <item name="colorControlNormal">@color/rate_dark</item>
        <item name="colorControlActivated">@color/yellow_orange</item>
    </style>


    <style name="TextViewTitleHome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/slate_grey</item>
    </style>

    <style name="progress_bar_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/cool_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/switch_color</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/slate_grey</item>
    </style>


    <style name="MyCustomTheme" parent="NavigationViewLight">
        <!--<item name="navigationViewPrimary">@color/mapbox_navigation_route_alternative_congestion_red</item>-->
        <!--<item name="navigationViewSecondary">@color/mapbox_navigation_route_layer_blue</item>-->
        <!-- Map style URL -->
        <item name="navigationViewMapStyle">@string/map_style</item>
    </style>

    <style name="FullScreenDialogStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>
